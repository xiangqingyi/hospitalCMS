extends ../layout-blank

block content
    section#login-container
            .row
                #login-wrapper.col-md-3
                    .panel.panel-primary
                        .panel-heading
                            h3.panel-title
                                | 医院病房信息管理系统
                        .panel-body
                            form.form-horizontal(role='form', action='', method='post')
                                .form-group
                                    .col-md-12
                                        input#email.form-control(type='text', name='username', placeholder='用户名', autofocus)
                                        i.fa.fa-user
                                .form-group
                                    .col-md-12
                                        input#password.form-control(type='password', name='password', placeholder='密码')
                                        i.fa.fa-lock
                                        a.help-block(href='#{adminDir}/user/forget') 忘记密码?
                                .form-group
                                    .col-md-12
                                        input(type='hidden', name='_csrf', value='#{token}')
                                        button.btn.btn-primary.btn-block(type='submit') 登录
                                        hr
                                        a.btn.btn-default.btn-block(href='#{adminDir}/user/register') 注册

