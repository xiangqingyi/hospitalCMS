extends ../layout

block content
    .row
        .col-md-12
            form(action='', method='post')
                .form-group
                    label 用户名
                    input.form-control(name='username', value='#{doctor.username}')
                .form-group
                    label 姓名
                    input.form-control(name='name', value='#{doctor.name}')
                .form-group
                    label 科室
                    input.form-control(name='address', value='#{doctor.address9}')
                .form-group
                    label 邮箱
                    input.form-control(name='email', value='#{doctor.email}')
                .form-group
                    labelRole
                    select.form-control.input-sm(multiple, name='roles')
                        - each role in roles
                            if (doctor.roles.indexOf(role.id) > -1)
                                option(value='#{role.id}', selected)
                                    | #{role.name}
                            else
                                option(value='#{role.id}')
                                    | #{role.name}
                input(type='hidden', name='_csrf', value='#{token}')
                button.btn.btn-primary(type='submit') 提交

block foot-js
    script.
        Messenger.options = {
            extraClasses: 'messenger-fixed messenger-on-bottom messenger-on-right',
            theme: 'flat'
        };
        $(function() {
            var messenger;
            $('form').ajaxForm({
                beforeSerialize: function() {
                    console.log('beforeSerialize')
                },
                beforeSubmit: function() {
                    console.log('beforeSubmit')
                    messenger = Messenger().post("Processing...");
                },
                success: function(data, status, xhr, $form) {
                    console.log(data)
                    var status = data.status;
                    if (status) {
                        messenger.update({
                            message: 'Success',
                            hideAfter: 3,
                            type: 'success'
                        });
                    } else {
                        messenger.update({
                            message: 'Failure',
                            hideAfter: 3,
                            type: 'success'
                        });
                    }
                },
                err: function() {
                    console.log('error')
                    messenger.update({
                        message: 'System Error',
                        hideAfter: 3,
                        type: 'success'
                    });
                }
            })
        })
